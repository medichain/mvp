<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 10</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			
			<field name="align" type="list" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="0">Left</option>
				<option value="1">Right</option>
			</field>
			
			<field name="img-features" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_LABEL_DESC" />
			<field name="title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1" />
			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />
			<field name="button" type="text" default="" label="FEATURES_BUTTON_LABEL" description="FEATURES_BUTTON_DESC" rows="5" cols="40"  />
			<field name="title-link" type="text" default="" size="40" label="FEATURES_TITLE_LINK_LABEL" description="FEATURES_TITLE_LINK_DESC"  />

		</fieldset>
  </fields>
</form>